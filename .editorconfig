root = true

[*.js]
charset = utf-8
indent_size = 2
indent_style = space
max_line_length = 80
end_of_line = lf
trim_trailing_whitespace = true

[*.yaml]
indent_size = 2
indent_style = space

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[*.jade]
max_line_length = 0
trim_trailing_whitespace = true
indent_size = 2
indent_style = space
